<section id="slider"><!--slider-->
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div id="slider-carousel" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#slider-carousel" data-slide-to="1"></li>
            <li data-target="#slider-carousel" data-slide-to="2"></li>
          </ol>

          <div class="carousel-inner">
            <div class="item active">
              <div class="col-sm-6">
                <h1><span>SMARTPHONE</span>-REVIEW</h1>
                <h2>LASTEST REVIEW </h2>
                <p>IPHONE</p>
                <a type="button" class="btn btn-default get" href="<%= review_path Review.first%>">Details</a>
              </div>
              <div class="col-sm-6">
                <%= image_tag Review.first.image.url, class: "girl img-responsive"%>
              </div>
            </div>
            <% Review.first(3).each do |review| %>
              <div class="item">
                <div class="col-sm-6">
                  <h1><span>SMARTPHONE</span>-REVIEW</h1>
                  <h2>LASTEST REVIEW </h2>
                  <p><%= review.title %></p>
                  <a type="button" class="btn btn-default get" href="<%= review_path review%>">Details</a>
                </div>
                <div class="col-sm-6">
                  <%= image_tag review.image.url, class: "girl img-responsive"%>
                </div>
              </div>
            <% end %>
          </div>

          <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
            <i class="fa fa-angle-left"></i>
          </a>
          <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
            <i class="fa fa-angle-right"></i>
          </a>
        </div>

      </div>
    </div>
  </div>
</section><!--/slider-->
