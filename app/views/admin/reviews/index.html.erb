<% provide :title, "All reviews"%>
<h1>All reviews</h1>
<%= link_to new_admin_review_path do %>
  <div class="btn btn-primary">Add review</div>
<% end %>
<table class="table table-bordered">
  <thead>
  <td>ID</td>
  <td>Phone</td>
  <td>Title</td>
  <td>Author</td>
  <td>Created at</td>
  <td>Updated at</td>
  <td>Actions</td>
  </thead>
  <% @reviews.each do |review| %>
    <tr>
      <td>
        <%= review.id %>
      </td>
      <td>
        <%= link_to review.mobile.name, admin_mobile_path(review.mobile) %>
      </td>
      <td>
        <%= link_to review.title, admin_review_path(review) %>
      </td>
      <td>
        <span class="label label-danger"><%= review.user.name %></span>
      </td>
      <td>
        <%= review.created_at %>
      </td>
      <td>
        <%= review.updated_at %>
      </td>
      <td>
        <%= link_to edit_admin_review_path(review) do %>
          <div class="btn btn-success"> Edit </div>
        <% end %>
        <%= link_to admin_review_path(review), method: :delete, data: {confirm: "Are you sure?"} do %>
          <div class="btn btn-danger"> Delete </div>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
