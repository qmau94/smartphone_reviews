<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-1">
      <div class="signup-form"><!--sign up form-->
        <h2>New User Signup!</h2>
        <%= form_for(resource, as: resource_name,html: {multipart: true},
          url: registration_path(resource_name)) do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
          <%= f.text_field :name, autofocus: true, placeholder: "Name"  %>
          <%= f.label "Avatar" %>
          <%= f.file_field :avatar, class: "form-control", placeholder: "Image" %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmation" %>
          <%= f.submit "Signup", class: "btn btn-default" %>
         <% end %>
      </div><!--/sign up form-->
    </div>
  </div>
</div>
