<% @comments.each do |comment|%>
  <li class="media">
    <div class="media-left">
      <a href="#">
        <% if comment.user.avatar %>
          <img class="media-object" src="<%= comment.user.avatar.url(:thumb)  %>">
        <% end  %>
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= comment.user.name %></h4>
      <span style="color: #b1b1b1;font-size: 12px;">posted <%= time_ago_in_words(comment.created_at) %> </span>
      <% if comment.user == current_user %>
        <%= link_to [@review, comment], method: :delete, data: {confirm: "Are you sure?"} do %>
          Delete
        <% end %>
      <% end %>
      <p class="comment_content"><%= comment.content %></p>
    </div>
  </li>
<% end %>
