<%= form_for [@review, @review.comments.build] do |f| %>
  <div class="replay-box">
    <div class="row">
      <div class="col-sm-2">
        <h2>Leave a response</h2>
          <div class="blank-arrow">
              <%= image_tag current_user.avatar.url(:thumb) %>
          </div>
      </div>
      <div class="col-sm-10">
        <div class="text-area">
          <div class="blank-arrow">
            <label><%= current_user.name %></label>
          </div>
          <%= f.text_area :content, class: "comment_form", rows: "11"%>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div><!--/Repaly Box-->

<% end %>
